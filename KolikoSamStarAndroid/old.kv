
<HomeScreen>:
    btnDay: buttonDayID
    btnMonth: buttonMonthID
    yearInput: yearInputID
    btnAsk: askID
    result: resultID

    BoxLayout:
        orientation: 'vertical'
        spacing: '15sp'

        Label:
            font_size: sp(15)  
            font_name: 'DejaVuSans'
            text: root.unicode_string
            size_hint: (0.5, 1.5)
            pos_hint: {'center_x': 0.5}
        
        Button:
            id: buttonDayID
            text: 'Odaberite dan'
            font_name: 'DejaVuSans'
	        size_hint: (0.5, 1)
            pos_hint: {'center_x': 0.5}
        
        Button:
            id: buttonMonthID
            text: 'Odaberite mjesec'
            size_hint: (0.5, 1)
            pos_hint: {'center_x': 0.5}

        TextInput:
            id: yearInputID
            halign: 'center'
            hint_text_color:(1,1,1,1)
            foreground_color: (1,1,1,1)
            background_color: (.5,.5,.5,1)
            size_hint: (0.5, 1)
            pos_hint: {'center_x': 0.5}

        Label:
            font_size: sp(15)  
            font_name: 'DejaVuSans'
            size_hint: (0.5, .5)
            pos_hint: {'center_x': 0.5}

        Button:
            id: askID
            size_hint: (0.25, 1)
            pos_hint: {'center_x': 0.5}

        Label:
            id: resultID
            text_size: self.size
            font_size: sp(15)  
            font_name: 'DejaVuSans'
            halign: 'center'
            valign: 'middle'
            text: ""
            size_hint: (0.8, 3.5)
            pos_hint: {'center_x': 0.5}

